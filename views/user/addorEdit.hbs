<h3>{{viewTitle}}</h3>

<form action="/user" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{user._id}}">
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" name="name" placeholder="Name" value="{{employee.name}}">
        <div class="text-danger">
            {{employee.fullNameError}}</div>
    </div>
    <div class="form-group">
        <label>Surname</label>
        <input type="text" class="form-control" name="surname" placeholder="Surname" value="{{employee.surname}}">
        <div class="text-danger">
            {{employee.emailError}}</div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>DateBirth</label>
            <input type="text" class="form-control" name="datebirth" placeholder="DateBirth" value="{{employee.datebirth}}">
        </div>
        <div class="form-group col-md-6">
            <label>Department</label>
            <input type="text" class="form-control" name="department" placeholder="Department" value="{{employee.department}}">
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/user/list"><i class="fa fa-list-alt"></i> View All</a>
    </div>
</form>